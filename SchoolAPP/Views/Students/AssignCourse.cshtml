@model IEnumerable<SchoolAPP.Models.Course>

@{
    ViewData["Title"] = "Select Course";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.Id)
                </td>
                <td>
                    <form asp-action="AssignCourse">
                        @*<a asp-action="AssignCourse" asp-route-id="@item.Id">Select</a>*@
                        <div class="form-group">
                            <input type="submit" id="@item.Id" value="Select" class="btn btn-primary" />
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>